import { Object, Property } from "fabric-contract-api";

@Object()
export class Permission {
  @Property()
  public expiredAt: number; // -1 means never expired
  @Property()
  public access: number; // read | write | delete
  @Property()
  public datasets: string;
}

@Object()
export class User {
  @Property()
  public id: string;
  @Property()
  public email: string;
  @Property()
  public phone: string;
  @Property()
  public permission: Permission;
  @Property()
  public orgIds: Array<string>;
}

@Object()
export class Org {
  @Property()
  public id: string;
  @Property()
  public users: Array<string>;
  @Property()
  public permission: Permission;
}

// Access
export enum ACCESS {
  WRITE = 0x001,
  READ = 0x010,
  DELETE = 0x100,
}
